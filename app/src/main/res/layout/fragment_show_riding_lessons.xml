<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toos="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:shimmer_auto_start="true"
        app:shimmer_duration="2000"
        app:shimmer_repeat_delay="10">
        <!-- Adding 15 rows of placeholders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/riding_lessons_day_placeholder" />

            <include layout="@layout/item_riding_lessons_placeholder" />

            <include layout="@layout/item_riding_lessons_placeholder" />

            <include layout="@layout/item_riding_lessons_placeholder" />

            <include layout="@layout/item_riding_lessons_placeholder" />

            <include layout="@layout/item_riding_lessons_placeholder" />

            <include layout="@layout/item_riding_lessons_placeholder" />

            <include layout="@layout/item_riding_lessons_placeholder" />

            <include layout="@layout/item_riding_lessons_placeholder" />

            <include layout="@layout/item_riding_lessons_placeholder" />

            <include layout="@layout/item_riding_lessons_placeholder" />

            <include layout="@layout/item_riding_lessons_placeholder" />

            <include layout="@layout/item_riding_lessons_placeholder" />

            <include layout="@layout/item_riding_lessons_placeholder" />

            <include layout="@layout/item_riding_lessons_placeholder" />
        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>


    <TextView
        android:id="@+id/ridingLessonDayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="MONTAG"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ridingLessonDayParentRcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ridingLessonDayTextView"
        android:visibility="gone"
        toos:listitem="@layout/item_parent_ridinglesson" />

</androidx.constraintlayout.widget.ConstraintLayout>